<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/profileSettingsButtonLayout"
        android:layout_width="match_parent"
        android:background="@drawable/sign_in_button"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="60dp">

        <android.support.v7.widget.CardView
            android:id="@+id/profile_home_image_card"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/profile_profile_image"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/app_icon"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/userNameMoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_home_image_card"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textColor="#555"
            android:text="Connor Myers"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_icon"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/helpButtonLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/profileSettingsButtonLayout"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/sign_in_button"
        android:layout_marginEnd="8dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/helpButtonIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@mipmap/help_support"/>

        <TextView
            android:layout_toRightOf="@id/helpButtonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textColor="#555"
            android:text="Help &amp; Support"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_icon"/>

    </RelativeLayout>

    <Button
        android:id="@+id/log_out_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/helpButtonLayout"
        android:text="Log out"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
