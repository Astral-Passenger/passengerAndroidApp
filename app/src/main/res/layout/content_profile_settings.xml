<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.spacebartechnologies.connormyers.passenger.ProfileSettingsActivity"
    tools:showIn="@layout/activity_profile_settings"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:cardCornerRadius="42dp"
            android:layout_gravity="center"
            android:innerRadius="0dp"
            android:layout_centerHorizontal="true"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="8sp">
            <ImageView
                android:id="@+id/profile_img"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:background="@drawable/redeem_button"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="8sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:textColor="@color/grey"
                android:text="Name"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:text="Tommy Duong"/>
        </RelativeLayout>
        <Button
            android:id="@+id/reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            style="?android:attr/borderlessButtonStyle"
            android:text="RESET PASSWORD"
            android:textColor="@color/red"
            android:background="@drawable/redeem_button"/>
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/redeem_button"
            android:text="SAVE"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

</RelativeLayout>
